<UserControl x:Class="installer.ReadLicenseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="480"
             Height="360"
             Loaded="Control_Loaded">
    <Grid Margin="10">
        <ScrollViewer Margin="0,0,0,30">
            <TextBox x:Name="LicenseTextBox" TextWrapping="Wrap"
                     IsReadOnly="True" />
        </ScrollViewer>
        <Button x:Name="DismissButton" Content="DISMISS"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Width="75" Click="DismissButton_Click" />
    </Grid>
</UserControl>